{
  "verbose": true,
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "transform": {
    "^.+\\.jsx?$": "<rootDir>/config/jest.babel.processor.setup.js",
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "/__tests__/(\\w+.)?(test|spec).(jsx?|tsx?)$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/config/",
    "/typings/",
    "/dist/"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/config/",
    "/typings/",
    "/dist/"
  ],
  "modulePathIgnorePatterns": [
    "/node_modules/",
    "/config/",
    "/typings/",
    "/dist/"
  ],
  "globals": {
    "window": {}
  },
  "setupTestFrameworkScriptFile": "<rootDir>/config/jest.framework.setup.js",
  "setupFiles": ["<rootDir>/config/jest.stubs.setup.js"],
  "moduleNameMapper": {
    ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
    ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
      "<rootDir>/config/jest.stubs.setup.js"
  },
  "coverageReporters": ["json", "lcov", "text", "html"]
}
